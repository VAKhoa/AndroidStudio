<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MÁY"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:background="#F44336"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/hinhM1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/b1fv"/>
            <ImageView
                android:id="@+id/hinhM2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/b1fv"/>
            <ImageView
                android:id="@+id/hinhM3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/b1fv"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_kqM"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text=""
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/May"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="20dp"
                    android:text="0"
                    android:textAlignment="viewEnd" />

                <ImageView android:id="@+id/vslogo"
                    android:layout_width="9dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ccccc"/>
                <TextView
                    android:id="@+id/Nguoi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:paddingTop="20dp"
                    android:textAlignment="viewStart"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_kqNg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text=""
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/hinhN1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/b1fv"/>
            <ImageView
                android:id="@+id/hinhN2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/b1fv"/>
            <ImageView
                android:id="@+id/hinhN3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/b1fv"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BẠN" android:textSize="35dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#4CAF50"/>
        <Button
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Chơi"
            android:textSize="40dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>